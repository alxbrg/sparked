{
  "env": {
    "es6":  true,
    "jest": true,
    "node": true
  },
  "extends": "standard",
  "rules": {
    "comma-dangle": [ "error", "always-multiline" ],
    "curly": [ "error", "multi" ],
    "max-len": [ "warn", { "code" : 90 } ],
    "no-multiple-empty-lines": [ "warn", { "max": 2 } ],
    "no-multi-spaces": [ "off" ],
    "semi": [ "error", "always" ]
  }
}
